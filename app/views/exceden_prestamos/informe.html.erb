<% content_for :titulo_seccion do %>
  Exceden Prestamos
<% end %>
<div class="col-lg-12 col-12">
   <div class="row">
      <div class="col-lg-12 text-right">
         <%= link_to "Descargar Excel", excel_index_pagares_path(@params_permit), class: "btn btn-lg btn-success" %>
      </div>
   </div>
</div>

<div class="container-fluid mt-3">
   <div class="row">
      <div class="col pl-0 pr-0">
         <div class="card">
            <div class="card-header">
               <h3 class="mb-0">Socios que Exceden Prestamos</h3>
            </div>
            <div class="table-responsive">
               <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                     <tr>
                        <th class="sort"><%= sort_link(@coleccion, :codigo_socio, "Codigo del Socio") %></th>
                        <th class="sort"><%= sort_link(@coleccion, :socio_id, "Nombre del Socio") %></th>
                        <th>Numero de Prestamos</th>
                     </tr>
                  </thead>
                  <tbody class="list">

                  </tbody>
               </table>
            </div>
            <div class="card-footer py-4">
             <%= paginate @registros %>
             <%= page_entries_info @registros %>
            </div>
         </div>
      </div>
   </div>
</div>