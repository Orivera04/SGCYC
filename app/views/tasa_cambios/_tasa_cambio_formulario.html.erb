<div class="row mb-3">
    <div class="col-lg-6 text-left">
        <button class="btn btn-lg btn-default" type="button" id="tasa_cambio_modal">
            <span class="btn-inner--icon"><i class="ni ni-app"></i> Servicio Web BCN</span>
        </button>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card-wrapper">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Informaci√≥n de la tasa de cambio</h3>
                </div>
                <div class="card-body">
                    <%= hidden_field(:tasacambio, :id, :value => @registro.id) %>
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Fecha</label>
                        <%= date_field(:tasacambio, :fecha, class: "form-control", id: "fecha", value: @registro.fecha) %>
                        <p class="text-danger"><%= @registro.errors[:fecha].first %></p>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Tasa de Cambio</label>
                        <%= text_field(:tasacambio, :tasa_cambio, class: "form-control", id: "tasa_cambio", value: @registro.tasa_cambio) %>
                        <p class="text-danger"><%= @registro.errors[:tasa_cambio].first %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
