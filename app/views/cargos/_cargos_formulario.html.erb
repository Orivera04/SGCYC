<div class="row">
    <div class="col-lg-12">
        <div class="card-wrapper">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Información del Cargo</h3>
                </div>
                <div class="card-body">
                    <%= hidden_field(:cargos, :id, :value => @registro.id) %>
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Nombre</label>
                        <%= text_field(:cargos, :nombre, class: "form-control", id: "nombre", value: @registro.nombre) %>
                        <p class="text-danger"><%= @registro.errors[:nombre].first %></p>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Descripción</label>
                        <%= text_field(:cargos, :descripcion, class: "form-control", id: "descripcion", value: @registro.descripcion) %>
                        <p class="text-danger"><%= @registro.errors[:descripcion].first %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
