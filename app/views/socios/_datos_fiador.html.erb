                </div>
                <div class="form-group">
                    <label class="form-control-label" for="tiempo_laborar">Años de Laborar</label>
                    <%= number_field(prefix_primer_fiador, :tiempo_laborar, class: "form-control", id: "tiempo_laborar", value: @registro.fiador[primer_fiador]&.tiempo_laborar) %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="tiempo_conocer">Tiempo de Conocer Al Solicitante</label>
                    <%= text_field(prefix_primer_fiador, :tiempo_conocer_solicitante, class: "form-control", id: "tiempo_conocer_solicitante", value: @registro.fiador[primer_fiador]&.tiempo_conocer_solicitante) %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-control-label" for="apellido">Apellido</label>
                    <%= text_field(prefix_primer_fiador, :apellido, class: "form-control", id: "apellido", value: @registro.fiador[primer_fiador]&.apellido) %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="domicilio">Domicilio</label>
                    <%= text_field(prefix_primer_fiador, :domicilio, class: "form-control", id: "domicilio", value: @registro.fiador[primer_fiador]&.domicilio) %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="municipio">Estado Civil</label>
                    <%= select_tag "#{prefix_primer_fiador}[estado_civil_id]", options_from_collection_for_select(EstadoCivil.all, :id, :nombre, @registro.fiador[primer_fiador]&.estado_civil_id),
                                   class: "form-control selectpicker", "data-live-search": "true" %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="profesion">Profesión</label>
