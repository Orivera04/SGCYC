                    <label class="form-control-label" for="nombre">Nombre</label>
                    <%= text_field(prefix_primer_fiador, :nombre, class: "form-control", id: "nombre", value: @registro.fiador[primer_fiador]&.nombre) %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="numero_cedula">Cedula</label>
                    <%= text_field(prefix_primer_fiador, :numero_cedula, class: "form-control", id: "numero_cedula", value: @registro.fiador[primer_fiador]&.numero_cedula) %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="municipio">Municipio</label>
                    <%= text_field(prefix_primer_fiador, :municipio, class: "form-control", id: "municipio", value: @registro.fiador[primer_fiador]&.municipio) %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="nombre_conyuge">Nombre Conyuge</label>
                    <%= text_field(prefix_primer_fiador, :nombre_conyuge, class: "form-control", id: "nombre_conyuge", value: @registro.fiador[primer_fiador]&.nombre_conyuge) %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="lugar_trabajo">Lugar de Trabajo</label>
                    <%= text_field(prefix_primer_fiador, :lugar_trabajo, class: "form-control", id: "lugar_trabajo", value: @registro.fiador[primer_fiador]&.lugar_trabajo) %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="nombre">Dirección</label>
                    <%= text_field(prefix_primer_fiador, :direccion_domicilio, class: "form-control", id: "direccion_domicilio", value: @registro.fiador[primer_fiador]&.direccion_domicilio) %>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="ingreso_mensual">Egreso Mensual</label>
