<% content_for :titulo_seccion do %>
  Usuarios
<% end %>

<div class="col-lg-12 col-12">
   <div class="row">
      <%= render 'usuarios/filtros' %>
      <div class="col-lg-6 text-right">
         <%= link_to "Descargar Excel", excel_index_usuarios_path(@params_permit), class: "btn btn-lg btn-success" %>
         <%= link_to "Crear Recurso", new_usuario_path, class: "btn btn-lg btn-neutral" %>
      </div>
   </div>
</div>

<div class="container-fluid mt-3">
   <div class="row">
      <div class="col pl-0 pr-0">
         <div class="card">
            <div class="card-header">
               <h3 class="mb-0">Usuarios registrados</h3>
            </div>
            <div class="table-responsive">
               <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                     <tr>
                        <th class="sort"><%= sort_link(@coleccion, :id, "ID") %></th>
                        <th class="sort"><%= sort_link(@coleccion, :email, "Correo") %></th>
                        <th>Nombre</th>
                        <th>Activo</th>
                        <th>Creado El</th>
                        <th>Actualizado El</th>
                        <th>Actualizar</th>
                        <th>Eliminar</th>
                     </tr>
                  </thead>
                  <tbody class="list">
                    <% @registros.each do |usuario| %>
                     <tr>
                        <td><%= usuario.id %></td>
                        <td><%= usuario.email %></td>
                        <td><%= usuario.nombre %></td>
                        <td><%= I18n.t(usuario.activo) %></td>
                        <td><%= usuario.created_at %></td>
                        <td><%= usuario.updated_at %></td>
                        <td>
                           <%= link_to edit_usuario_path(usuario), class: "btn btn-icon btn-primary" do %>
                              <i class="ni ni-align-left-2"></i>
                           <% end %>
                        </td>
                        <td>
                           <%= link_to usuario_path(usuario), class: "btn btn-icon btn-danger", method: :delete do %>
                              <i class="ni ni-scissors"></i>
                           <% end %>
                        </td>
                     </tr>
                    <% end %>
                  </tbody>
               </table>
            </div>
            <div class="card-footer py-4">
             <%= paginate @registros %>
             <%= page_entries_info @registros %>
            </div>
         </div>
      </div>
   </div>
</div>