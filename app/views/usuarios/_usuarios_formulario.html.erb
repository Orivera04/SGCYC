<div class="row">
    <div class="col-lg-12">
        <div class="card-wrapper">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Información del Usuario</h3>
                </div>
                <div class="card-body">
                    <%= hidden_field(:usuarios, :id, :value => @registro.id) %>
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Correo</label>
                        <%= text_field(:usuarios, :email, class: "form-control", id: "correo", value: @registro.email) %>
                        <p class="text-danger"><%= @registro.errors[:email].first %></p>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Contraseña</label>
                        <%= password_field(:usuarios, :password, class: "form-control") %>
                        <p class="text-danger"><%= @registro.errors[:password].first %></p>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Nombre</label>
                        <%= text_field(:usuarios, :nombre, class: "form-control", id: "nombre", value: @registro.nombre) %>
                        <p class="text-danger"><%= @registro.errors[:nombre].first %></p>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Rol</label>
                        <%= select_tag "usuarios[roles_id]", options_from_collection_for_select(Rol.all, :id, :nombre, @registro.roles_id ),
                            class: "form-control selectpicker", "data-live-search": "true" %>
                        <p class="text-danger"><%= @registro.errors[:roles_id].first %></p>
                    </div>
                     <div class="form-group">
                        <label class="form-control-label" for="nombre">Cargo</label>
                        <%= select_tag "usuarios[cargos_id]", options_from_collection_for_select(Cargo.all, :id, :nombre, @registro.cargos_id ),
                            class: "form-control selectpicker", "data-live-search": "true" %>
                        <p class="text-danger"><%= @registro.errors[:cargos_id].first %></p>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Estado</label>
                        <%= select_tag "usuarios[activo]", options_for_select([["Activo", Usuario::ACTIVO], ["Inactivo", Usuario::INACTIVO]], "#{@registro.activo.to_i}"),
                            class: "form-control selectpicker", "data-live-search": "true" %>
                        <p class="text-danger"><%= @registro.errors[:roles_id].first %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
