<div class="col-lg-12 col-12 text-right mt-4">
    <%= link_to "Crear", new_role_path, class: "btn btn-sm btn-neutral" %>
</div>

<div class="container-fluid mt-3">
   <div class="row">
      <div class="col">
         <div class="card">
            <div class="card-header">
               <h3 class="mb-0">Roles registrados</h3>
            </div>
            <div class="table-responsive">
               <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                     <tr>
                        <th class="sort"><%= sort_link(@coleccion, :id, "ID") %></th>
                        <th class="sort"><%= sort_link(@coleccion, :nombre, "Nombre") %></th>
                        <th class="sort"><%= sort_link(@coleccion, :estado, "Estado") %></th>
                        <th class="sort"><%= sort_link(@coleccion, :created_at, "Creado El") %></th>
                        <th class="sort"><%= sort_link(@coleccion, :updated_at, "Actualizado El") %></th>
                     </tr>
                  </thead>
                  <tbody class="list">
                    <% @registros.each do |rol| %>
                     <tr>
                        <td><%= rol.id %></td>
                        <td><%= rol.nombre %></td>
                        <td><%= I18n.t(rol.estado) %></td>
                        <td><%= rol.created_at %></td>
                        <td><%= rol.updated_at %></td>
                     </tr>
                    <% end %>
                  </tbody>
               </table>
            </div>
            <div class="card-footer py-4">
             <%= paginate @registros %>
             <%= page_entries_info @registros %>
            </div>
         </div>
      </div>
   </div>
</div>