<div class="row">
    <div class="col-lg-12">
        <div class="card-wrapper">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Informaci√≥n del Rol</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label class="form-control-label" for="nombre">Nombre</label>
                        <%= text_field(:Rol, :nombre, class: "form-control", id: "nombre") %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-3 mt-3">
    <nav class="nav nav-pills nav-justified container-fluid">
        <% TipoRecurso.all.each do |tipo_recurso| %>
            <a class="nav-item nav-link" data-toggle="tab" href="#<%= tipo_recurso.nombre %>"><%= tipo_recurso.nombre %></a>
        <% end %>
    </nav>

    <div class="tab-content container-fluid">
        <% TipoRecurso.all.each do |tipo_recurso| %>
            <% recursos_asociados = Recurso.where(tipo_recurso_id: tipo_recurso.id) %>
            <div id="<%= tipo_recurso.nombre %>" class="tab-pane fade mt-4">
                <div class ="card">
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th class="sort">Recurso</th>
                                    <% Accion.all.each do |accion| %>
                                        <th class="sort"><%= accion.nombre %> </th>
                                    <% end %>
                                </tr>
                            </thead>
                            <tbody class="list">
                                <% recursos_asociados.each do |recurso| %>
                                    <tr>
                                        <td><%= recurso.nombre %></td>
                                        <% Accion.all.each do |accion| %>
                                            <td>
                                                <div class="custom-control custom-checkbox mb-3">
                                                    <input class="custom-control-input" id="customCheck2" type="checkbox" checked="">
                                                    <label class="custom-control-label" for="customCheck2"></label>
                                                </div>
                                            </td>
                                        <% end %>
                                    </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>